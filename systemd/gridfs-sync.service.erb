[Unit]
Description=GridFS sync service

[Service]
SyslogIdentifier=gridfs-sync
WorkingDirectory=<%=@package_dir%>
Environment=DOTNET_CLI_TELEMETRY_OPTOUT=1
ExecStart=/usr/bin/dotnet <%=@package_dir%>/gridfs-sync-service.dll --config <%=@config_file%> --hostingconfig <%=@hosting_file%>
ExecReload=/bin/kill -INT $MAINPID
ProtectSystem=full
ProtectHome=true
User=nobody
NoNewPrivileges=true
Restart=on-failure
RestartSec=17
